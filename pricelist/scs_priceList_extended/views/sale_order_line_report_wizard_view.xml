<odoo>
    <record id="view_sale_order_line_report_wizard_form" model="ir.ui.view">
        <field name="name">sale.order.line.report.wizard.form</field>
        <field name="model">sale.order.line.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Sale Order Line Log Report Wizard">
                <group>
                    <field name="company_id"/>
                    <field name="sale_order_ids" widget="many2many_tags"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                </group>
                <footer>
                    <!-- <button string="Generate Report" type="object"
                            name="action_generate_report" class="btn-primary"/> -->
                    <button string="Send Test Email" name="action_send_mail" type="object" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-danger"/>
                    <button string="SOL_REPORT" name="action_print_pdf_report" type="object" class="btn-primary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_sale_order_line_report_wizard" model="ir.actions.act_window">
        <field name="name">Sale Order Line Log Report</field>
        <field name="res_model">sale.order.line.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_sale_order_line_report"
              name="Sale Order Line Log Report"
              parent="sale.menu_sale_report"
              action="action_sale_order_line_report_wizard"
              sequence="70"/>
</odoo>
