<odoo>

    <record id="view_purchase_order_form_inherit_hsn_code" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit.hsn.code</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/list/field[@name='product_id']" position="after">
                <field name="hsn_code"/>
            </xpath>
        </field>
    </record>
</odoo>
