<odoo>
    <record id="view_price_list_update_log_tree" model="ir.ui.view">
        <field name="name">price.list.update.log.tree</field>
        <field name="model">pricelist.update.log</field>
        <field name="arch" type="xml">
            <list string="Price List Update Log">
                <field name="company_id"/>
                <field name="pricelist_id"/>
                <field name="product_id"/>
                <field name="old_price"/>
                <field name="new_price"/>
                <field name="old_min_qty"/>
                <field name="new_min_qty"/>
                <field name="update_date"/>
                <field name="updated_by"/>
            </list>
        </field>
    </record>

    <record id="action_pricelist_update_log" model="ir.actions.act_window">
        <field name="name">Price List Update</field>
        <field name="res_model">pricelist.update.log</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_pricelist_update_log" name="Price List Updates"   parent="sale.product_menu_catalog" action="action_pricelist_update_log" sequence="40"/>
</odoo>





