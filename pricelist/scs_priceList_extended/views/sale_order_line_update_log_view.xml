<odoo>
    <record id="view_sale_order_line_update_log_list" model="ir.ui.view">
        <field name="name">sale.order.line.update.log.list</field>
        <field name="model">sale.order.line.update.log</field>
        <field name="arch" type="xml">
            <list string='Sale Order Line Update Log'>
                <field name="sale_order_id"/>
                <field name="sale_order_line_id"/>
                <field name="product_id"/>
                <field name="Value_changed"/>
                <field name="old_value"/>
                <field name="new_value"/>
                <field name="changed_by"/>
                <field name="change_date"/>
                <field name="company_id"/>
            </list>
        </field>
    </record>

    <record id="action_sale_order_line_update_log" model="ir.actions.act_window">
        <field name="name">Sale Order Line Update Logs</field>
        <field name="res_model">sale.order.line.update.log</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_sale_order_line_update_log_root" name="Sale Order Line Logs" parent="sale.menu_sale_report" action="action_sale_order_line_update_log" sequence="60"/>
</odoo>
