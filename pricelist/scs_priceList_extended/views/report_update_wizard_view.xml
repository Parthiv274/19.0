<odoo>
    <record id="view_report_update_wizard_form" model="ir.ui.view">
        <field name="name">report.update.wizard.form</field>
        <field name="model">report.update.wizard</field>
        <field name="arch" type="xml">
            <form string="Update Report Wizard">
                <group>
                    <field name="company_id"/>
                    <field name="pricelist_ids" widget="many2many_tags"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                </group>
                <footer>
                    <button string="Ok" type="object"
                            name="action_generate_report" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-danger"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_report_update_wizard" model="ir.actions.act_window">
        <field name="name">Update Report</field>
        <field name="res_model">report.update.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_update_report"
              name="PriceList Report"
              parent="sale.menu_sale_report"
              action="action_report_update_wizard" sequence="50"/>
</odoo>
