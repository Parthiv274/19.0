<odoo>
    <record id="mail_template_sale_order_line_report_responsibles" model="mail.template">
        <field name="name">Sale Order Line Report - Responsibles</field>
        <field name="model_id" ref="model_sale_order_line_report_wizard"/>
        <field name="subject">Sale Order Line Report-{object.start_date} to {object.end_date}</field>
        <field name="email_from">{{user.email or 'noreply@yourcompany.com'}}</field>
        <field name="body_html" type="html">
            <p>Hello,</p>
            <p>Please find attached the sale order line report for {object.start_date} to {object.end_date}</p>
            <p>Regards{object.user.name}</p>
        </field>
    </record>
</odoo>


