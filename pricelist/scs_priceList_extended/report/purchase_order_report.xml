<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_purchaseorder_document_inherit_amount_words" inherit_id="purchase.report_purchaseorder_document">

        <xpath expr="//th[@name='th_quantity']" position="after">
            <th name = "hsn_code">HSN</th>
        </xpath>

        <xpath expr="//tr/t[@t-if='not line.display_type']/td[2]" position="after">
            <th t-field = "line.hsn_code"/>
        </xpath>

        <xpath expr="//table[contains(@class, 'o_total_table')]" position="after">
            <t t-set="amount_words" t-value="o.currency_id.amount_to_text(o.amount_total)"/>
            <p style="margin-top: 15px;">
                <strong>Amount in Words: </strong>
                <span t-esc="amount_words"/> Only
            </p>
        </xpath>

    </template>
</odoo>
